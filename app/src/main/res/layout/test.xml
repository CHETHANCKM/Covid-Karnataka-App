<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="190dp"
    android:layout_margin="10dp"
    android:elevation="1dp"
    android:paddingLeft="3dp"
    android:paddingTop="10dp"
    android:paddingRight="3dp"
    android:paddingBottom="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardMaxElevation="1dp"
    app:contentPadding="8dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:text="Latest Data in 24Hrs"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="18dp" />

        </LinearLayout>
    </FrameLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:elevation="1dp"
                app:cardBackgroundColor="@color/light_red"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="1dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans"
                        android:text="Today confirmed"
                        android:textColor="#F53939" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/today_confirmed"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosans"
                                android:gravity="bottom"
                                android:text="..."
                                android:textColor="#F53939"
                                android:textFontWeight="600"
                                android:textSize="20dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom"
                                android:fontFamily="@font/notosans"
                                android:gravity="bottom"
                                android:text="Peoples"
                                android:textColor="#F53939"
                                android:textSize="10sp" />
                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:elevation="1dp"
                app:cardBackgroundColor="@color/light_green"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="1dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans"
                        android:text="Today discharged"
                        android:textColor="#229C22" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/today_recovered"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosans"
                                android:gravity="bottom"
                                android:text="..."
                                android:textColor="#229C22"
                                android:textFontWeight="600"
                                android:textSize="20dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom"
                                android:fontFamily="@font/notosans"
                                android:gravity="bottom"
                                android:text="Peoples"
                                android:textColor="#229C22"
                                android:textSize="10sp" />
                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:elevation="1dp"
                app:cardBackgroundColor="@color/light_orange"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="1dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans"
                        android:text="Today deceased"
                        android:textColor="#F27B13" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/today_death"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosans"
                                android:gravity="bottom"
                                android:text="..."
                                android:textColor="#F27B13"
                                android:textFontWeight="600"
                                android:textSize="20dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom"
                                android:fontFamily="@font/notosans"
                                android:gravity="bottom"
                                android:text="Peoples"
                                android:textColor="#F27B13"
                                android:textSize="10sp" />
                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>
</androidx.cardview.widget.CardView>

